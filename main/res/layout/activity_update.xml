<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".UpdateActivity">
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView
            android:id="@+id/imgUpdate"
            android:padding="10dp"
            android:src="@drawable/ic_account"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <Button
                android:id="@+id/btChupHinh"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="#0489B1"
                android:text="Chụp hình"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17sp" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btChonHinh"
                android:layout_marginLeft="30dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Chọn hình"
                android:background="#333"
                android:textColor="#fff"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#0489B1"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sinh viên"
            android:textColorHint="#fff" />
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edtLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lớp"
            android:textColorHint="#fff"/>
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edtNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh"
            android:textColorHint="#fff"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btLuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:background="#fff"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:textColor="#0040FF"/>

            <Button
                android:background="#fff"
                android:textColor="#DF0101"
                android:id="@+id/btHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textSize="17dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>